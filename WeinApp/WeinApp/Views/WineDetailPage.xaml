<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeinApp.Views.WineDetailPage"
             Title="{Binding Weinname}">
    <ScrollView>
    <StackLayout Spacing="20" Padding="15">
        <Label Text="Weinname:" FontSize="Medium" />
        <Label Text="{Binding Weinname}" FontSize="Small"/>
        <Label Text="Typ:" FontSize="Medium" />
        <Label Text="{Binding Jahrgang}" FontSize="Small"/>
        <Label Text="Jahrgang:" FontSize="Medium" />
        <Label Text="{Binding Typ}" FontSize="Small"/>
        <Label Text="Herkunft:" FontSize="Medium" />
        <Label Text="{Binding Herkunft}" FontSize="Small"/>
        <Label Text="Flaschengrösse:" FontSize="Medium" />
        <Label Text="{Binding Flaschengroesse}" FontSize="Small"/>
        <Label Text="Anzahl Flaschen:" FontSize="Medium" />
            <Label Text="{Binding AnzahlFlaschen}" FontSize="Small"/>
        </StackLayout>
    </ScrollView>
</ContentPage>
